{
  "name": "playwright",
  "displayName": "Playwright Test for VSCode",
  "description": "Run Playwright Test tests in Visual Studio Code.",
  "icon": "images/playwright-logo.png",
  "version": "0.2.2",
  "preview": true,
  "publisher": "ms-playwright",
  "repository": "https://github.com/microsoft/playwright-vscode",
  "bugs": {
    "url": "https://github.com/microsoft/playwright-vscode/issues"
  },
  "engines": {
    "vscode": "^1.64.0"
  },
  "categories": [
    "Testing"
  ],
  "activationEvents": [
    "workspaceContains:**/*playwright*.config.{ts,js,mjs}",
    "onCommand:pw.extension.install",
    "onCommand:pw.extension.recordTest",
    "onCommand:pw.extension.refreshTests",
    "onCommand:pw.extension.help.openWalkthrough"    
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "category": "Test",
        "command": "pw.extension.refreshTests",
        "icon": "$(refresh)",
        "title": "Refresh Playwright Tests"
      },
      {
        "category": "Test",
        "command": "pw.extension.recordTest",
        "icon": "$(record)",
        "title": "Record Playwright Test"
      },
      {
        "category": "Test",
        "command": "pw.extension.install",
        "title": "Install Playwright"
      }      
    ],
    "menus": {
      "view/title": [
        {
          "command": "pw.extension.recordTest",
          "when": "view == workbench.view.testing",
          "group": "navigation@0"
        },
        {
          "command": "pw.extension.refreshTests",
          "when": "view == workbench.view.testing",
          "group": "navigation@0"
        }
      ]
    },
    "walkthroughs": [
      {
        "id": "get-started",
        "title": "Getting started with Playwright",
        "description": "A walkthrough to get you started with Playwright.",
        "featuredFor": [
          "**/*playwright*.config.{ts,js,mjs}"
        ],
        "steps": [
          {
            "id": "install",
            "title": "Install Playwright",
            "description": "Install Playwright to get started.\n[Run Command](command:pw.extension.install)",
            "media": {
              "image": "images/walkthrough-install.png",
              "altText": "Install Playwright"
            },
            "completionEvents": [
              "onCommand:pw.extension.install"
            ]
          },        
          {
            "id": "run",
            "title": "Run a test",
            "description": "Open example.spec.ts and run a test.\n[Run an example test](command:workbench.action.files.openFile?tests)",
            "media": {
              "image": "images/walkthrough-run.gif",
              "altText": "Run tests"
            },
						"completionEvents": [
							"onView:workbench.view.testing"
						] 
          },
          {
            "id": "debug",
            "title": "Debug a test",
            "description": "Set a break point and debug.\n[Debug a test](command:workbench.view.explorer)",
            "media": {
              "image": "images/walkthrough-debug.gif",
              "altText": "Debug Test"
            }
          },                    
          {
            "id": "record",
            "title": "Record a test",
            "description": "Use the recorder to create a test.\n[Start recording](command:pw.extension.recordTest)",
            "media": {
              "image": "images/walkthrough-record.gif",
              "altText": "Record a test"
            },
            "completionEvents": [
              "onCommand:pw.extension.recordTest"
            ]
          }
        ]
      }
    ]   
  },
  "scripts": {
    "esbuild": "esbuild ./src/babelBundle.ts ./src/extension.ts ./src/oopReporter.ts ./src/debugTransform.ts --bundle --outdir=out --external:vscode --external:./babelBundle --external:./debugTransform --external:./oopReporter --format=cjs --platform=node --target=ES2019",
    "build": "npm run esbuild -- --minify",
    "watch": "npm run esbuild -- --sourcemap --watch",
    "vscode:prepublish": "npm run build",
    "lint": "eslint . --ext .ts,.tsx,.js",
    "download-api": "vscode-dts dev && vscode-dts main",
    "test": "playwright test",
    "package": "vsce package",
    "code": "code --uninstall-extension ms-playwright.playwright && code --install-extension playwright-0.2.2.vsix",
    "uncode": "code --uninstall-extension ms-playwright.playwright",
    "code-insiders": "code-insiders --uninstall-extension ms-playwright.playwright && code-insiders --install-extension playwright-0.2.2.vsix",
    "uncode-insiders": "code-insiders --uninstall-extension ms-playwright.playwright"
  },
  "devDependencies": {
    "@playwright/test": "^1.19.0",
    "@types/babel__core": "^7.1.18",
    "@types/babel__helper-plugin-utils": "^7.10.0",
    "@types/babel__traverse": "^7.14.2",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.14",
    "@types/ws": "^8.2.2",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "@vscode/test-electron": "^2.1.1",
    "esbuild": "^0.14.20",
    "eslint": "^8.8.0",
    "eslint-plugin-notice": "^0.9.10",
    "eslint-plugin-react-hooks": "^4.3.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.0",
    "typescript": "^4.5.5",
    "vsce": "^2.6.7",
    "vscode-dts": "^0.3.3"
  },
  "dependencies": {
    "@babel/core": "^7.16.12",
    "@babel/helper-plugin-utils": "^7.16.7",
    "@babel/parser": "^7.16.12",
    "@babel/traverse": "^7.16.10",
    "stack-utils": "^2.0.5",
    "ws": "^8.4.2"
  }
}
