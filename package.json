{
	"name": "playwright",
	"displayName": "Playwright Test for VSCode",
	"description": "Show and Run your Playwright Test tests inside Visual Studio Code.",
	"icon": "images/playwright-logo.png",
	"version": "0.0.3",
	"preview": true,
	"publisher": "ms-playwright",
	"repository": "https://github.com/microsoft/playwright-vscode",
	"enableProposedApi": true,
	"engines": {
		"vscode": "^1.59.0"
	},
	"categories": [
		"Testing"
	],
	"activationEvents": [
		"workspaceContains:**/*.{test,spec}.{ts,js,mjs}"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "Playwright Test path",
			"properties": {
				"playwright.cliPath": {
					"type": "string",
					"default": "./node_modules/@playwright/test/lib/cli/cli.js",
					"description": "Playwright Test CLI path"
				},
				"playwright.configs": {
					"type": "array",
					"scope": "resource",
					"description": "If its empty, it will use the Playwrigh Test defaults (playwright.config.{ts,js,mjs})",
					"items": {
						"type": "string",
						"description": "Playwright Test configuration file"
					}
				},
				"playwright.env": {
					"type": "object",
					"default": {},
					"description": "Object with environment variables that will be added to the Playwright Test process.",
					"additionalProperties": {
						"type": [
							"string"
						]
					}
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint . --ext .ts,.tsx",
		"watch": "tsc -watch -p ./",
		"download-api": "vscode-dts dev",
		"postdownload-api": "vscode-dts main",
		"postinstall": "npm run download-api",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@playwright/test": "^1.14.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "^15.12.4",
		"@typescript-eslint/eslint-plugin": "^4.29.2",
		"@typescript-eslint/parser": "^4.29.2",
		"@vscode/test-electron": "^1.6.2",
		"eslint": "^7.32.0",
		"eslint-plugin-notice": "^0.9.10",
		"glob": "^7.1.7",
		"mocha": "^9.0.3",
		"typescript": "^4.3.5",
		"vscode-dts": "^0.3.1"
	},
	"dependencies": {
		"stack-utils": "^2.0.3"
	}
}
