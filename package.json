{
	"name": "playwright",
	"displayName": "Playwright Test for VSCode",
	"description": "Show and Run your Playwright Test tests inside Visual Studio Code.",
	"icon": "images/playwright-logo.png",
	"version": "0.0.9",
	"preview": true,
	"publisher": "ms-playwright",
	"repository": "https://github.com/microsoft/playwright-vscode",
	"bugs": {
		"url": "https://github.com/microsoft/playwright-vscode/issues"
	},
	"engines": {
		"vscode": "^1.59.0"
	},
	"categories": [
		"Testing"
	],
	"activationEvents": [
		"workspaceContains:playwright.config.{ts,js}",
		"workspaceContains:**/*.{test,spec}.{ts,js,mjs}"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "Playwright Test path",
			"properties": {
				"playwright.cliPath": {
					"type": "string",
					"default": "./node_modules/@playwright/test/cli.js",
					"description": "Playwright Test CLI path"
				},
				"playwright.configs": {
					"type": "array",
					"scope": "resource",
					"description": "If its empty, it will use the Playwrigh Test defaults (playwright.config.{ts,js,mjs})",
					"items": {
						"type": "string",
						"description": "Playwright Test configuration file"
					}
				},
				"playwright.env": {
					"type": "object",
					"description": "Object with environment variables that will be added to the Playwright Test process.",
					"additionalProperties": {
						"type": [
							"string"
						]
					}
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run build",
		"build": "tsc -p ./",
		"lint": "eslint . --ext .ts,.tsx,.js",
		"watch": "tsc -watch -p ./",
		"download-api": "vscode-dts dev",
		"postdownload-api": "vscode-dts main",
		"postinstall": "npm run download-api && npm run build && node out/test/runTest.js install",
		"test": "node ./out/test/runTest.js run"
	},
	"devDependencies": {
		"@playwright/test": "^1.16.3",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.0.0",
		"@types/node": "^16.11.10",
		"@typescript-eslint/eslint-plugin": "^5.4.0",
		"@typescript-eslint/parser": "^5.4.0",
		"@vscode/test-electron": "^1.6.2",
		"eslint": "^8.3.0",
		"eslint-plugin-notice": "^0.9.10",
		"glob": "^7.2.0",
		"mocha": "^9.1.3",
		"typescript": "^4.5.2",
		"vscode-dts": "^0.3.2"
	},
	"dependencies": {
		"stack-utils": "^2.0.5"
	}
}
