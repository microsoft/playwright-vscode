{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2019",
    "lib": ["esnext", "DOM"],
    "strict": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noEmit": true,
    "allowJs": true
  },
  "include": ["**/*.ts", "**/*.js", ".eslintrc.js"],
  "exclude": ["node_modules", "test-results"]
}
